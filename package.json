  "license": "ISC",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "install:pkgs": "pnpm install --filter @repo/*",
    "build:pkgs": "pnpm run build --filter @repo/*",
    "build:pkgs:nocache": "pnpm run build --filter @repo/* --no-cache",
    "commit": "git add . && git commit --no-edit"
  },
  "devDependencies": {
    "turbo": "^2.1.3",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
