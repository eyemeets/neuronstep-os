{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",               // Output directory for transpiled JavaScript files
    "rootDir": "src",               // Root directory for input files
    "declaration": true,            // Generate .d.ts files for type declarations
    "declarationDir": "dist",       // Output directory for type declaration files
    "module": "ESNext",             // Module system to use (or CommonJS if needed)
    "target": "ESNext",             // ECMAScript target version
    "strict": true,                 // Enable strict type checking
    "esModuleInterop": true,        // Enable interoperability between CommonJS and ES modules
    "skipLibCheck": true,           // Skip checking of declaration files (.d.ts)
    "forceConsistentCasingInFileNames": true, // Ensure file names are case-consistent
    "typeRoots": ["./src/declarations.d.ts"] // Add your custom types folder here
  },
  "include": ["src/**/*"],          // Include all files under the src folder
  "exclude": ["node_modules"]       // Exclude node_modules from the compilation
}
