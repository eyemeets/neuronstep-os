{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "src",
    "resolveJsonModule": true,
    "paths": {
      "firebase/app": ["../../node_modules/@firebase/app"],
      "@firebase/auth": ["../../node_modules/@firebase/auth/dist/index.rn.d.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
