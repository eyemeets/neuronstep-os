{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "src",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts"  // Includes all TypeScript files in src and subdirectories
  ],
  "exclude": ["node_modules", "dist", "tsup.config.ts"]
}
