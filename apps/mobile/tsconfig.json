{
  "extends": "tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "noEmit": true,
    "target": "ESNext",
    "paths": {
      "@/*": ["./*"],
      "@firebase/auth": ["../../node_modules/@firebase/auth/dist/index.rn.d.ts"],
      "@shared-types": ["../../packages/shared-types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/*.d.ts",
    "../../packages/shared-types/*"
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}