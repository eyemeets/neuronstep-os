{
  "extends": "@repo/shared-tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "isolatedModules": false,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"] // Set the alias here
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
